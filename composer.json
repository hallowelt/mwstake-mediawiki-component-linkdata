{
	"name": "mwstake/mediawiki-component-richlinks",
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "HalloWelt! GmbH",
			"email": "support@bluespice.com"
		}
	],
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.4.0",
		"mediawiki/mediawiki-codesniffer": "29.0.0",
		"mediawiki/minus-x": "1.0.0"
	},
	"autoload": {
		"psr-4": {
			"MWStake\\MediaWiki\\Component\\RichLinks\\": "src/",
			"MWStake\\MediaWiki\\Component\\RichLinks\\Tests\\": "tests/phpunit/"
		},
		"files": [
			"bootstrap.php"
		]
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -sp"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"unittest": [
			"../../../tests/phpunit/phpunit.php tests/phpunit"
		]
	}
}
